---
import type { Image } from "astro:assets";
import data from '../data/data.json';
---

<div class="py-5 px-10 md:flex-1 bg-white rounded-e-2xl">
    <h3 class="text-xl font-medium mb-4">Summary</h3>
    {
        data.map((result) => (
        <div class=`flex py-3 px-4 rounded-xl mb-6 bg-${result.color}` >
            <img src={result.icon}></img>
        <div class="flex-auto ml-4">{result.category}</div>
        <div class="flex-auto text-end">
            <span class="font-bold">{result.score}</span> / 100
        </div>
        </div>
        ))
    }

    <button
      class="py-4 mt-4 w-full rounded-3xl bg-dark-gray-blue hover:bg-slate-400 text-white font-bold text-xl"
    >
      Continue
    </button>
  </div>